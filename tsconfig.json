{
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "lib": [ "es6", "dom" ],
        "types": [
            // add node as an option
            "node"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]

    }
}
